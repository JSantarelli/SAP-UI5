<edmx:Edmx Version="4.0" xmlns:edmx="http://schemas.microsoft.com/ado/2007/06/edmx">
    <edmx:Runtime>
        <edmx:DataServices>
            <Schema Namespace="your.namespace" xmlns="http://schemas.microsoft.com/ado/2008/10/edm">
                <EntityType Name="Product">
                    <Key>
                        <PropertyRef Name="ProductID" />
                    </Key>
                    <Property Name="ProductID" Type="Edm.String" Nullable="false" />
                    <Property Name="ProductName" Type="Edm.String" />
                    <Property Name="Price" Type="Edm.Decimal" />
                </EntityType>
                <EntityContainer Name="Container">
                    <EntitySet Name="Products" EntityType="your.namespace.Product" />
                </EntityContainer>
            </Schema>
        </edmx:DataServices>
    </edmx:Runtime>
</edmx:Edmx>
