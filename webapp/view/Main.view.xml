<mvc:View
  controllerName="com.sapui5.controller.Main"
  displayBlock="true"
  xmlns="sap.tnt"
  xmlns:m="sap.m"
  xmlns:mvc="sap.ui.core.mvc">

  <ToolPage>
    <header>
      <ToolHeader>
        <m:Button
          icon="sap-icon://menu2"
          tooltip="Menu"
          press="onMenuButtonPress" />
        <m:Title text="My Tool Page Header" />
        <m:Button
          icon="sap-icon://person-placeholder"
          tooltip="Profile" />
      </ToolHeader>
    </header>

    <sideContent>
      <!-- Side content can be placed here if needed -->
    </sideContent>

    <mainContents>
      <m:Page id="mainPage" title="Main Content">
        <m:content>

        </m:content>
      </m:Page>
    </mainContents>
  </ToolPage>
</mvc:View>
